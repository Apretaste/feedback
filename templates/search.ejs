<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'SUGERENCIAS'})">Abiertas</a></li>
			<li class="tab"><a href="#" class="active">Buscar</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'SUGERENCIAS REGLAS'})">Reglas</a></li>
		</ul>
	</div>
</div>

<!-- USERNAME -->
<div class="row">
	<div class="col s12 input-field">
		<input id="username" type="text">
		<label for="username">Buscar por @username</label>
		<a href="#!" onclick="apretaste.send({'command':'SUGERENCIAS ENCONTRAR', 'data': {'username':'<%= username %>'}})">Ver mis sugerencias</a>
	</div>
</div>

<!-- STATUS -->
<div class="row">
	<div class="col s12 input-field">
		<select id="status">
			<option value="" selected>Todos</option>
			<option value="OPEN">Abiertas</option>
			<option value="APPROVED">Aceptadas</option>
			<option value="DISCARDED">Rechazadas</option>
		</select>
		<label for="status">Escoja estado</label>
	</div>
</div>

<!-- TEXT -->
<div class="row">
	<div class="col s12 input-field">
		<input id="text" type="text">
		<label for="text">Escriba un texto a buscar</label>
	</div>
</div>

<div class="bottom-space"></div>

<!-- SAVE BUTTON -->
<div id="btn" class="fixed-action-btn">
	<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="startSearch()">
		<i class="material-icons">search</i>
	</a>
</div>