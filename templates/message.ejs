<div class="row">
	<div class="col s12 center">
		<h1 class="black-text"><%= header %></h1>
		<i class="material-icons large"><%= icon %></i>

		<p><%= text %></p>

		<a class="waves-effect waves-light btn" href="#!" onclick="apretaste.send({'command':'<%= button['href'] %>'})">
			<%= button['caption'] %>
		</a>

		<a class="waves-effect waves-light btn waves-effect waves-light modal-trigger" href="#newTicketModal">
			<i class="tiny material-icons">message</i> Crear
		</a>
	</div>
</div>

<!-- MODAL NEW -->
<div id="newTicketModal" class="modal bottom-sheet">
	<div class="modal-content">
		<div class="input-field">
			<textarea id="message" class="materialize-textarea"></textarea>
			<label for="message">Escriba su sugerencia</label>
		</div>
	</div>
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect waves-light btn-flat">Cerrar</a>
		<a onclick="sendMessage()" class="modal-close waves-effect waves-green btn-flat">Enviar</a>
	</div>
</div>