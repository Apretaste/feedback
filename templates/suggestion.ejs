<div class="row">
    <div class="col s12 l12 m12 x12">
        <h1>Sugerencia</h1>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <ul class="tabs tabs-fixed-width">
            <li class="tab"><a href="#" onclick="apretaste.send({command: 'SUGERENCIAS'})">Abiertas</a></li>
            <li class="tab"><a href="#" onclick="apretaste.send({command: 'SUGERENCIAS REGLAS'})">Reglas</a></li>

        </ul>
    </div>
</div>

<div class="row">
	<div class="col s12 l12 m12 x12">
	Sugerida por @<%= suggestion.username %><br/>
	<% if (suggestion.status == "NEW") { %>
		<p>Expira el <%= formatDateTime(suggestion.limit_date) %></p>
		<p>Faltan <%= suggestion.limit_votes - suggestion.votes_count %> votos para aprobarla</p>
	<% } %>
	<p>Estado: <%= suggestion.estado %></p>
	<p style="background-color:#F2F2F2; padding:10px;"><big><%= suggestion.text %></big></p>
	</div>
</div>

<% if (voteButtonEnabled) { %>
<div class="fixed-action-btn hide-on-share">
    <a class="btn-floating btn-large waves-effect waves-light" href="#!" onclick="apretaste.send({command: 'SUGERENCIAS VOTAR', data: {id: '<%= suggestion.id %>'}});">
        <i class="material-icons">plus_one</i>
    </a>
</div>
<% } %>